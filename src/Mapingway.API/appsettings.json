{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "System.Net.Http.HttpClient": "Information"
      }
    },
    "Enrich": [
      "FromGlobalLogContext",
      "FromLogContext",

      "WithMachineName",
      "WithThreadsId",
      "WithSpanId",

      "WithProcessId",
      "WithProcessName",

      "WithEnvironmentName",
      "WithAssemblyName",
      "WithAssemblyVersion",

      "WithClientIp",
      "WithClientAgent",
      {
        "Name": "WithCorrelationIdHeader",
        "Args": {
          "headerKey": "correlation-id",
          "addValueIfHeaderAbsence": false
        }
      },

      "WithExceptionDetails"
    ],
    "Filter": [
      {
        "Name": "ByIncludingOnly",
        "Args": {
          "expression": "RequestPath like '%/api%' ci"
        }
      }
    ],
    "WriteTo": [
      { "Name" : "Console" },
      { "Name" : "Seq",
        "Args" : {
          "serverUrl" : "http://localhost:5341"
        }
      },
      { "Name" : "File",
        "Args" : {
          "path" : "logs/log-.json",
          "rollingInterval" : "Day",
          "rollOnFileSizeLimit" : true,
          "formatter" : "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  },
  "Database": {
    "DefaultScheme":  "public",
    "EnableLogging": true,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false
  },
  "ConnectionStrings": {
    "DefaultConnection": "User ID=postgres;Server=localhost;Host=localhost;Port=5432;Database=Mapingway;Username=postgres;Password=postgres;Pooling=true;Encoding=UTF8"
  },
  "Jwt": {
    "Issuer" : "Mapingway",
    "Audience": "Mapingway",
    "SigningKey": "M4p1ngW4yy_Rul3zzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzz",
    "UserContextSigningKey": "m4pIn9W@@y_rUl3z$",
    "AccessTokenLifetime" : "00:15:00",
    "RefreshTokenLifetime" : "360:00:00"
  },
  "Hash": {
    "Pepper" : "p3PpErr0rS4lt",
    "Iterations" : "2"
  },
  "AllowedHosts": "*"
}
