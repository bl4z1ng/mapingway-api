{
  "Database": {
    "DefaultScheme":  "public",
    "EnableLogging": true,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false
  },
  "ConnectionStrings": {
    "DefaultConnection": "User ID=postgres; Server=localhost; Host=localhost; Port=5432; Database=Mapingway; Username=postgres; Password=postgres; Pooling=true; Encoding=UTF8"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "WriteTo": [
      { "Name" : "Console" },
      { 
        "Name" : "File",
        "Args" : 
        {
          "path" : "logs/log-.log",
          "rollingInterval" : "Day",
          "rollOnFileSizeLimit" : true,
          "formatter" : "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadsId" ]
  },
  "AllowedHosts": "*"
}
