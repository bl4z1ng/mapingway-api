{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "Default": "Warning",
    "MinimumLevel": {
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "WriteTo": [
      { "Name" : "Console" },
      { 
        "Name" : "File",
        "Args" : 
        {
          "path" : "Logs/log-.log",
          "rollingInterval" : "Day",
          "rollOnFileSizeLimit" : true,
          "formatter" : "Serilog.Formatting.Compact.CompactJsonFormatter"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadsId" ]
  },
  "AllowedHosts": "*"
}
