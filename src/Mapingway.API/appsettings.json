{
  "Database": {
    "ConnectionString": "User ID=postgres;Server=localhost;Host=localhost;Port=5432;Database=Mapingway;Username=postgres;Password=postgres;Integrated Security=true;Pooling=true;Encoding=UTF8",
    "DefaultScheme":  "public",
    "EnableLogging": true,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": true
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "Default": "Warning",
    "MinimumLevel": {
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "WriteTo": [
      { "Name" : "Console" },
      { 
        "Name" : "File",
        "Args" : 
        {
          "path" : "Logs/log-.log",
          "rollingInterval" : "Day",
          "rollOnFileSizeLimit" : true,
          "formatter" : "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadsId" ]
  },
  "AllowedHosts": "*"
}
