{
  "Database": {
    "DefaultScheme":  "public",
    "EnableLogging": true,
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=Mapingway.Development.db;Foreign Keys=true;"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "WriteTo": [
      { "Name" : "Console" },
      {
        "Name" : "File",
        "Args" :
        {
          "path" : "Logs/log-.log",
          "rollingInterval" : "Day",
          "rollOnFileSizeLimit" : true,
          "formatter" : "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadsId" ]
  }
}